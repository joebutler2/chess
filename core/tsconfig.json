{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "lib/",
    "rootDir": ".",
    "lib": ["es2015", "esnext"],
    "module": "commonjs",
    // This is required, otherwise the following would error in our depenedencies.
    // `import('pretty-format').Plugin`
    // See https://github.com/microsoft/TypeScript/issues/35961 for more info.
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "lib"]
}
